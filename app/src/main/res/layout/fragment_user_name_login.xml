<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.xitij.android.oij.view.login.fragments.UserNameLoginFragment">


     <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:gravity="center"
             android:orientation="vertical">


             <android.support.v7.widget.AppCompatEditText
                 android:id="@+id/email"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:hint="Username"
                 android:textColor="#000" />

             <android.support.v7.widget.AppCompatEditText
                 android:id="@+id/password"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:hint="Password"
                 android:textColor="#000" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="16dp"
                 android:gravity="center"
                 android:orientation="vertical">

                 <com.adcreators.android.utilities.widgets.Buton
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     app:fontButon="regular"
                     android:id="@+id/btnLoginUsername"
                     android:text="Login" />

                 <com.adcreators.android.utilities.widgets.TxtView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="8dp"
                     android:text="Forgot Password?" />


                 <com.adcreators.android.utilities.widgets.Buton
                     android:id="@+id/btnGotoRegistration"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="32dp"
                     android:background="@null"
                     android:text="Not a member? Register here"
                     android:textSize="12sp" />

             </LinearLayout>

         </LinearLayout>


</FrameLayout>
