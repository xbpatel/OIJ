<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bb000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearCentre"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">


        <com.adcreators.android.utilities.widgets.TxtView
            android:id="@+id/txtTitleHud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="Allow XION to access your location while you use the app?"
            android:textColor="#424242"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.adcreators.android.utilities.widgets.TxtView
            android:id="@+id/txtDescriptionHud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="To provide results suitable for you"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />

        <View
            android:id="@+id/dividerHud"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="8dp"
            android:background="#000"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:gravity="center"
            android:orientation="horizontal">

            <com.adcreators.android.utilities.widgets.Buton
                android:id="@+id/btnHudNegativeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:text="Don't Allow" />

            <com.adcreators.android.utilities.widgets.Buton
                android:id="@+id/btnHudPositiveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:text="Allow" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgHudIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@id/linearCentre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:background="@drawable/circle"
        android:scaleType="centerInside" />


</RelativeLayout>