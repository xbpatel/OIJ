<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.xitij.android.oij.view.login.fragments.PincodeLoginFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical">

        <com.andrognito.pinlockview.IndicatorDots
            android:id="@+id/indicator_dots"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="8dp"
            android:layout_height="wrap_content" />

        <com.andrognito.pinlockview.PinLockView
            android:id="@+id/pin_lock_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:dotDiameter="42dp"
            app:dotEmptyBackground="@drawable/circle_empty"
            app:dotFilledBackground="@drawable/circle_filled"
            app:dotSpacing="16dp"
            app:keypadTextColor="@color/colorPrimaryDark"
            app:keypadDeleteButtonPressedColor="@color/colorPrimary"
            app:keypadTextSize="26dp" />

    </LinearLayout>


</FrameLayout>
